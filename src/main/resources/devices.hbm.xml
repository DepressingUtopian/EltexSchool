<?xml version='1.0'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ru.eltex.app.java.model.products">

    <class name="Devices" table="devices">
        <id name="id" type="int" column="id">
            <generator class="assigned"/>
        </id>

        <property name="ID">
            <column name="uuid"/>
        </property>
        <property name="name">
            <column name="name"/>
        </property>
        <property name="OS">
            <column name="os"/>
        </property>
        <property name="firm">
            <column name="firm"/>
        </property>
        <property name="model">
            <column name="model"/>
        </property>
        <property name="price">
            <column name="price"/>
        </property>
    </class>

</hibernate-mapping>